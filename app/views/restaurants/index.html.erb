<div class="container">
  <h1>All Restaurants</h1>

  <%= link_to 'Create a new Restaurant', new_restaurant_path, class: "btn btn-secondary" %>

  <div class="card" >
    <% @restaurants.each do |restaurant|%>
    <div class="card bg-light mb-2">
      <div class="body">
        <div class="card-title">
          <h3><%= link_to restaurant.name, restaurant_path(restaurant), class: "text-black" %></h3>
        </div>
        <div class="card-text">
          <p><%= restaurant.category.capitalize %> Food</p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
